
<%=link_to "List Your Car", new_car_path %>
<div>
    <label>Number of listings:</label>
    <%= current_user.cars.size%>
</div>

<ul>
    <h1>Welcome Car Owners</h1>
</ul>
    
    <% @cars.each do |v| %>
  <div class="container">
    <div class="row">
      <div class="col-sm">
        <div class="card" style="width: 18rem;">
        </div>
          <%= image_tag v.images.first.variant(resize_to_limit: [300, 300]) if v.images.attached? %>
          <div class="card-body">
            <h5 class="card-title"><%= link_to v.make, "cars/#{v.id}" %></h5>
    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
    <a href="#" class="btn btn-primary">Go somewhere</a>
  </div>
</div>
    </div>
  </div>
</div>
        
   
        <label>Highest bid:</label>
        <%= link_to v.highest_bid.bid_amount, "/cars/#{v.id}/bids/#{v.highest_bid.id}" if v.bids.present? %>
    <% end %>
    

    
        
